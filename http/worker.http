@baseUrl = http://localhost:3000/api/v1
@apiKey = very secret password

###
# @name CreateMachine
POST {{baseUrl}}/machines HTTP/1.1
Content-Type: application/json
Authorization: {{apiKey}}

{
	"image": "nginx",
	"memory": 512,
	"vcpus": 1
}

###
# @name GetMachine
# @prompt machineId
GET {{baseUrl}}/machines/{{machineId}}
Authorization: {{apiKey}}


###
# @name ListMachines
GET {{baseUrl}}/machines
Authorization: {{apiKey}}


###
# @name StartMachine
# @prompt machineId
POST  {{baseUrl}}/machines/{{machineId}}/start
Authorization: {{apiKey}}


###
# @name StopMachine
# @prompt machineId
POST {{baseUrl}}/machines/{{machineId}}/stop
Authorization: {{apiKey}}


###
# @name DeleteMachine
# @prompt machineId
DELETE {{baseUrl}}/machines/{{machineId}}
Authorization: {{apiKey}}

###
# @name ExitWorker
POST {{baseUrl}}/exit
Authorization: {{apiKey}}